            <DataGrid.Columns>
                <DataGridTextColumn
                                x:Name="Prix"
                                Header="Prix" />

                <DataGridTextColumn x:Name="Code"
                                Header="Code (EAN / ISBN)"/>

                <DataGridTextColumn x:Name="Titre"
                                Header="Titre"/>

                <DataGridTextColumn x:Name="Type"
                                Header="Type (EAN / ISBN)"/>

                <DataGridTextColumn x:Name="Auteur"
                                Header="Auteur"/>

                <DataGridTextColumn x:Name="Editeur"
                                Header="Editeur"/>

            </DataGrid.Columns>

        </DataGrid>
        <Button Content="Ajouter" Grid.Column="1" HorizontalAlignment="Left" Margin="975,51,0,0" VerticalAlignment="Top" Width="100" Height="23"/>
        <Label Content="Réassort" Grid.Column="1" HorizontalAlignment="Left" Margin="141,26,0,0" VerticalAlignment="Top"/>
